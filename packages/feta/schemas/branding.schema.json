{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://genesis.dev/schemas/branding.schema.json",
  "title": "Branding Schema",
  "description": "Schema for validating branding configuration files",
  "definitions": {
    "colors": {
      "type": "object",
      "description": "Color palette definition",
      "properties": {
        "primary": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "secondary": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "foreground": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "background": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
        "destructive": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" }
      },
      "additionalProperties": {
        "type": "string",
        "pattern": "^#[0-9A-Fa-f]{6}$"
      }
    },
    "typography": {
      "type": "object",
      "description": "Typography definition",
      "properties": {
        "heading": {
          "type": "object",
          "properties": {
            "family": { "type": "string" },
            "weights": {
              "type": "array",
              "items": { "type": "integer" }
            }
          },
          "required": ["family"]
        },
        "body": {
          "type": "object",
          "properties": {
            "family": { "type": "string" },
            "weights": {
              "type": "array",
              "items": { "type": "integer" }
            }
          },
          "required": ["family"]
        },
        "mono": {
          "type": "object",
          "properties": {
            "family": { "type": "string" },
            "weights": {
              "type": "array",
              "items": { "type": "integer" }
            }
          }
        }
      },
      "required": ["heading", "body"]
    },
    "i18n": {
      "type": "object",
      "description": "Internationalization configuration",
      "properties": {
        "defaultLocale": { "type": "string" },
        "supportedLocales": {
          "type": "array",
          "items": { "type": "string" }
        },
        "rtlLocales": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["defaultLocale", "supportedLocales"]
    }
  }
}
